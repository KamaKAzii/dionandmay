%section.index
  %article
    #sign-in
      =image_tag("logo_small.png", :id => "hello")
      =form_for("user", :url => user_session_path, :html => {:id => "sign_in"}, :remote => true, :format => :json ) do |f|
        =f.label :username, 'Login'
        =f.text_field :username
        =f.label :password, 'Password'
        =f.password_field :password
        =f.label :remember_me
        =f.check_box :remember_me
        .action
          =f.submit 'Sign in'
        .result
        .help-link
          Login Problems? Contact
          %a{:href => "mailto:mail@mayanddion.com", :target => "_blank"}
            mail@mayanddion.com
            
